---
const categories = [
  { name: "Semillas", image: "https://images.unsplash.com/photo-1615485737651-58054a7b3aa4" },
  { name: "Frutos Secos", image: "https://images.unsplash.com/photo-1604908177522-04059b6a1f77" },
  { name: "Cereales", image: "https://images.unsplash.com/photo-1587049352847-8c9d3a26f4f3" },
  { name: "Especias", image: "https://images.unsplash.com/photo-1608133688640-7c2b52c5f7f2" }
];

const products = [
  {
    badge: "OFERTA",
    badgeColor: "bg-primary",
    title: "Nueces Premium",
    description: "Seleccionadas a mano, frescas y llenas de energía natural.",
    image: categories[0].image
  },
  {
    badge: "NUEVO",
    badgeColor: "bg-accent",
    title: "Mix de Semillas",
    description: "Chía, lino y sésamo para una nutrición completa.",
    image: categories[1].image
  },
  {
    badge: "OFERTA",
    badgeColor: "bg-primary",
    title: "Nueces Premium",
    description: "Seleccionadas a mano, frescas y llenas de energía natural.",
    image: categories[0].image
  },
];

const year = new Date().getFullYear();
---

<!-- ========================= -->
<!-- CATEGORÍAS (FLEX WRAP) -->
<!-- ========================= -->
<section class="px-6 py-14">

  <div class="flex justify-between items-center mb-8">
    <h2 class="text-2xl font-extrabold">Nuestras Categorías</h2>
    <span class="text-primary font-bold text-sm cursor-pointer">Ver todo</span>
  </div>

  <div class="flex flex-wrap gap-4 justify-center">
    {categories.map(cat => (
      <article
        class="relative w-[calc(50%-0.5rem)] md:w-[calc(25%-0.75rem)]
               aspect-square rounded-2xl overflow-hidden group
               border border-accent/30"
      >
        <img
          src={cat.image}
          alt={cat.name}
          class="absolute inset-0 w-full h-full object-cover
                 group-hover:scale-110 transition-transform duration-500"
        />

        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>

        <div class="absolute bottom-0 w-full p-4 text-center">
          <h3 class="text-white font-bold text-lg">{cat.name}</h3>
        </div>
      </article>
    ))}
  </div>

</section>

<!-- ========================= -->
<!-- PRODUCTOS DESTACADOS -->
<!-- ========================= -->
<section class="bg-white py-16 rounded-t-[3rem] shadow-xl shadow-primary/5">

  <div class="px-6 mb-12">
    <span class="text-accent text-xs font-black uppercase tracking-widest">
      Selección especial
    </span>
    <h2 class="text-3xl font-extrabold">Productos Destacados</h2>
  </div>

  <div class="flex flex-wrap justify-center gap-10 px-6">

    {products.map(product => (
      <article
        class="w-full sm:w-[380px] bg-bgsoft/70
               rounded-3xl overflow-hidden
               border border-accent/10"
      >

        <div class="relative aspect-square">
          <img
            src={product.image}
            alt={product.title}
            class="w-full h-full object-cover"
          />
          <span
            class={`absolute top-4 left-4 ${product.badgeColor}
                    text-white text-[10px] font-bold px-3 py-1 rounded-full`}
          >
            {product.badge}
          </span>
        </div>

        <div class="p-6 space-y-4">

          <div>
            <h3 class="text-xl font-extrabold">{product.title}</h3>
            <p class="text-sm text-zinc-600">{product.description}</p>
          </div>

          <a
            href="https://wa.me/XXXXXXXXXX"
            target="_blank"
            class=" bg-[#55A767] h-14 flex items-center justify-center gap-2
                   rounded-2xl bg-primary text-white font-bold hover:bg-[#3fb800]
                   shadow-lg shadow-primary/20"
          >
            Pedir por WhatsApp
          </a>

        </div>
      </article>
    ))}

  </div>
</section>